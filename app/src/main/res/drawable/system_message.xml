<?xml version="1.0" encoding="utf-8"?>
<!--
      Resource for the system messages
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Shape fill-->
    <solid
        android:color="@color/system_message" />

    <!--Specifies the rounded corners-->
    <corners
        android:radius="3dp" />

    <!--Padding-->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp" />

</shape>